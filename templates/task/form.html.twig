{% extends 'base.html.twig' %}

{% block title %}Create new task{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="alert alert-danger">
                {% if errors %}
                <ul>
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>

            <form class="col s12" method="post">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="title" name="title" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="date" type="text" class="datepicker" name="date">
                        <label for="date">Date</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <p>
                            <label>
                                <input class="with-gap" name="group3" type="radio" value="true"/>
                                <span>Done</span>
                            </label>
                            <label>
                                <input class="with-gap" name="group3" type="radio" value="false"/>
                                <span>To Do</span>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <a type="button" value="task" class="btn waves-effect waves-light">Save
                        <i class="material-icons right">send</i>
                    </a>

                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    $(document).ready(function(){
        $('.datepicker').datepicker();
    });

{% endblock %}



